# .env.example
HOST_VOLUME_ROOT=/mnt/docker-data/volumes    # مثال، در سرور خودت مقدار مناسب بگذار
WEB_DOMAIN=ai.example.internal
WEBUI_URL=https://ai.example.internal
ENABLE_PERSISTENT_CONFIG=True
ENABLE_LOGIN_FORM=False
THREAD_POOL_SIZE=80
OLLAMA_BASE_URL=http://ollama-lb:11434
ENABLE_LDAP=true

# LDAP (نمونه — مقدار واقعی را در .env (local) قرار بده)
LDAP_SERVER_HOST=ldap.example.corp
LDAP_SERVER_PORT=389
LDAP_USE_TLS=false
LDAP_VALIDATE_CERT=false
LDAP_APP_DN="CN=YOUR_BIND_USER,OU=...,DC=example,DC=com"
LDAP_APP_PASSWORD="PUT_BIND_PASSWORD_IN_LOCAL_ENV"
LDAP_SEARCH_BASE="DC=example,DC=com"
LDAP_ATTRIBUTE_FOR_USERNAME=sAMAccountName
LDAP_ATTRIBUTE_FOR_MAIL=mail
LDAP_SEARCH_FILTER='(&(objectClass=user)(!(userAccountControl:1.2.840.113556.1.4.803:=2)))'

QDRANT_URI=http://qdrant:6333
QDRANT_COLLECTION=webui_rag
OLLAMA_NUM_PARALLEL=1
